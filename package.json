{
  "name": "arkavidia-frontend",
  "repository": {
    "type": "git",
    "url": "https://github.com/arkavidia-hmif/arkavidia-frontend.git"
  },
  "version": "1.0.0",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "generate:production": "DOTENV_FILE=production next build && DOTENV_FILE=production next export",
    "generate:staging": "DOTENV_FILE=staging next build && DOTENV_FILE=staging next export",
    "start": "next start",
    "type-check": "tsc",
    "lint": "npm run lint:check",
    "lint:check": "eslint --max-warnings 0 --ext .ts,.js,.tsx .",
    "lint:fix": "eslint --max-warnings 0 --fix --ext .ts,.js,.tsx ."
  },
  "dependencies": {
    "bootstrap": "^4.5.3",
    "dotenv": "^8.2.0",
    "next": "^9.5.5",
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "devDependencies": {
    "@types/node": "^12.12.21",
    "@types/react": "^16.9.16",
    "@types/react-dom": "^16.9.4",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "eslint": "^7.11.0",
    "eslint-plugin-react": "^7.21.5",
    "husky": "^4.3.0",
    "typescript": "4.0"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run lint"
    }
  }
}